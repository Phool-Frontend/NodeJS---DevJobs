<main class="contenedor">
    <form action="/vacantes/editar/{{#each vacante}}{{{url}}}{{/each}}" method="POST" class="default-form">
        <h3>Informacion General</h3>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej:React Developer" value="{{#each vacante}}{{{titulo}}}{{/each}}" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Ej:Empresa Contrata" value="{{#each vacante}}{{{empresa}}}{{/each}}"required>
        </div>
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej:Mexico o Remoto" value="{{#each vacante}}{{{ubicacion}}}{{/each}}" required>
        </div>
        <div class="campo">
            <label>Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej:$500 USD" value="{{#each vacante}}{{{salario}}}{{/each}}"  required>
        </div>
           <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato contrak}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Completo">Medio Completo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion</label>
            <input type="hidden" id="x" name="descripcion" value="{{#each vacante}}{{{descripcion}}}{{/each}}" >
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills  gol}} 
            {{/seleccionarSkills}} 
        </ul>



        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Guardar cambios" class="btn btn-azul">
        </div>
    </form>
</main>
